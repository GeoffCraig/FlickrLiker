<?xml version="1.0" encoding="utf-8"?>

<!-- Got the idea from here: https://github.com/Fourcade7/Java_BottomNavigationView/blob/master/app/src/main/res/drawable-v24/bottominidicator.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <size
                        android:height="3dp"
                        android:width="10dp"
                        />

                    <corners android:radius="150dp"></corners>
                    <solid android:color="#d9ad4e" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>